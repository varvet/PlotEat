<div class="index_container">

  <h1 class="recipe_title">Recipes</h1>

  <br/>
  <% @recipes.each do |recipe| %>
  <div id="<%=dom_id(recipe)%>"><%= link_to recipe.title, recipe_path(recipe) %>
    <%=link_to  "Add to menu", menu_path(@menu, params: {recipe_id: recipe.id}), method: :put, class: "btn btn-primary"%>  </div>
  <% end %>
</div>

