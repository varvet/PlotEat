<div class="index_container">

  <h2 class="recipe_title">Recipes</h2>

  <br/>
  <div class="recipes_list">
  <% @recipes.each do |recipe| %>
  <div id="<%=dom_id(recipe)%>"><%= link_to recipe.title, recipe_path(recipe) %>
    <%= link_to  "Add to menu", menu_path(@menu, params: {recipe_id: recipe.id}), method: :put, class: "btn btn-outline-dark"%>  </div>
  <% end %>
</div>
</div>

