<h1 class="log_in_title">Log In</h1>
<%= form_tag sessions_path, method: :post do %>
  <div class="form-group">
    <%= email_field_tag :email, nil, class: 'form-control', required: true, placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= password_field_tag :password, nil, class: 'form-control', required: true, placeholder: "Password" %>
  </div>
  <div class="registration-button">
  <%= submit_tag 'Submit', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>